	<!-- 위에 3개를 wild card 형식으로 만들거야  -->
	<definition name="/*/*" extends="layout1"> 
		<put-attribute name="main" value="/WEB-INF/{1}/{2}.jsp"/>
	</definition>
</tiles-definitions>